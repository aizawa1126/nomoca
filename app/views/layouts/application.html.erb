<!DOCTYPE html>
<html>
<head>
  <title>nomoca</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <meta name="viewport" content="width=device-width, user-scalable=no, minimum-scale=1, maximum-scale=1" />
  <%= csrf_meta_tags %>
</head>
<body>
  <div>
    <h1>
      <%= link_to 'Nomoca', root_path  %>
      <ul class="menu">
      <% if session[:login] %>
      <% user = session[:login]%>
        <li><%= link_to (user[:name].blank? ? user[:account] : user[:name]), :controller => 'users', :action => 'show', :id => user[:id] %></li>
        <li><%= link_to 'ログアウト', :controller => 'authentication', :action => 'logout' %></li>
      <% else %>
        <li><%= link_to 'ログイン', :controller => 'authentication', :action => 'index' %></li>
      <% end %>
      </ul>
    </h1>
  </div>
<%= yield %>

</body>
</html>
