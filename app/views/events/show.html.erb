<p id="notice"><%= notice %></p>
<% if @is_own %>
<%= link_to 'Edit', edit_event_path(@event) %> |
<% end %>
<%= link_to 'Back', events_path %>
<p>
  <b>Title:</b>
  <%= @event.title %>
</p>

<p>
  <b>Date:</b>
  <%= @event.date %>
</p>

<p>
  <b>Place:</b>
  <%= @event.place %>
</p>

<p>
  <b>Budget:</b>
  <%= @event.budget %>
</p>

<p>
  <b>Context:</b>
  <%= @event.context %>
</p>
<table>
<tr>
  <th>Name</th>
  <th>Intention</th>
  <th>Edit</th>
  <% if @is_own %>
  <th>Destroy</th>
  <% end %>
</tr>
<% @invitations.each do |invitation| %>
<tr>
<td><%= invitation.user.name ? invitation.user.name : invitation.user.account %></td>
<% 
  intention = if invitation.intention == nil then 'unknown'
              elsif invitation.intention == true then '○'
              else '×'
              end
%>
<td><%= intention %></td>
<td>
<% if @is_own || @user.id == invitation.user.id %>
<%= link_to 'Edit', :controller => 'invitations', :action=>'edit', :id => invitation.id, :event_id => @event.id %>
<% end %>
</td>
<% if @is_own %>
<td><%= link_to 'Destroy', {:controller => 'invitations', :action=>'destroy', :id => invitation.id, :event_id => @event.id}, method: :delete, data: { confirm: 'Are you sure?' } %></td>
<% end %>
</tr>
<% end %>
</table>
<% if @is_own %>
<%= link_to 'New Invitation', :controller => 'invitations', :action=>'new', :event_id => @event.id %>
<% end %>
