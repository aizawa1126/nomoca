<h1>イベントリスト</h1>

<table>
  <tr>
    <th>タイトル</th>
    <th>日時</th>
    <th>場所</th>
    <th>予算</th>
    <th>説明</th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.title %></td>
    <td><%= if event.start_time then event.start_time.strftime("%Y-%m-%d %H:%M") end %></td>
    <td><%= event.place %></td>
    <td><%= event.budget.blank? ? '未定' : event.budget.to_s+'円' %></td>
    <td><%= event.context %></td>
    <td><%= link_to 'もっと見る', event %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'イベント新規作成', new_event_path %>
