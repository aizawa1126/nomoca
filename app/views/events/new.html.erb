<h1>イベント新規作成</h1>

<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label 'タイトル' %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label '日時' %><br />
    <%= f.datetime_select :start_time, :start_year => Time.now.year, :end_year => Time.now.year + 2, :use_month_numbers => true, :minute_step => 10 %>
  </div>
  <div class="field">
    <%= f.label '場所' %><br />
    <%= f.text_field :place %>
  </div>
  <div class="field">
    <%= f.label '予算' %><br />
    <%= f.number_field :budget %>
  </div>
  <div class="field">
    <%= f.label '詳細' %><br />
    <%= f.text_area :context %>
  </div>
  <div class="field">
    <%= f.label '公開する' %><br />
    <%= f.check_box :public %>
  </div>
  <div class="actions">
    <%= f.submit 'イベント作成'%>
  </div>
<% end %>
