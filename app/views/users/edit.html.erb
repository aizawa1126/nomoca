<h1>アカウントを編集</h1>

<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <p>アカウント名: <%= @user[:account] %></p>
  </div>
  <div class="field">
    <%= f.label '名前' %><br />
    <%= f.text_field :name %>
  </div>
    <div class="field">
    <%= f.label 'パスワード' %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label 'パスワード(確認用)' %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
